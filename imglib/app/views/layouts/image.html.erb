<!DOCTYPE html>
<html>
<head>
  <title>Image Library | <%= @page_title || "Index" %></title>
  <%= stylesheet_link_tag("application", :media=>"all") %>
</head>
<body>
<div id="header">
	<h1><%= link_to("Image Library", {:action => "index"}) %></h1>
	<% # image_tag("/assets/images/banner.jpg", :alt => "Banner", :border=>0) %>
</div>
<div id="main">
	<% if !flash[:notice].blank? %>
		<div class="notice">
			<%= flash[:notice] %>
		</div> 
	<% end #if %>
	<% if !flash[:error].blank? %>
		<div class="error">
			<%= flash[:error] %>
		</div>
	<% end #if %> 
	<div id="content">
	<%= yield %>
	</div>
</div>
<div id="footer">
	<p id="copyright">&copy; 2015 David St Bernard</p>
</div>
</body>
</html>
